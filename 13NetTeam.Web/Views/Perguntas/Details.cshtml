@model _13NetTeam.Core.Models.Pergunta

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Pergunta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dd>
            <dl class="dl-horizontal">

                @if (Model.Respostas != null)
                {
                    foreach (var item in Model.Respostas)
                    {
                        <dt>
                            Resposta
                        </dt>
                        <dd>
                            @item.Descricao
                            <br>
                            Autor =  @item.Autor
                        </dd>

                    }
                }
            </dl>
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Respostas" asp-action="Create" asp-route-id="@Model.Id">Responder</a> |
    
    <a asp-action="Index">Voltar/a>
</div>
